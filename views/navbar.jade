  .container-fluid
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='http://stepando.com', alt='stepando', title='stepando')
          img(src='/images/favicon.png', alt='stepando')
      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li.active
            a(href='#')
              | about
              span.sr-only (current)
          li
            a(href='#') Link
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
              | Dropdown
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='#') Action
              li
                a(href='#') Another action
              li
                a(href='#') Something else here
              li.divider
              li
                a(href='#') Separated link
              li.divider
              li
                a(href='#') One more separated link

        // Sign up and sign in
        ul.nav.navbar-nav.navbar-right
          // Alert message
          li
            if (message != '' && message)
              div#navAlert.alert.alert-danger.alert-dismissible(role='alert')
                span #{message}
                button.close(type='button', data-dismiss='alert')
                  span(aria-hidden='true') &times;
          // Sign Up button
          li
            a(href='/signup') Sign Up
          // Sign In dropdown
          li.dropdown
            a.dropdown-toggle(data-toggle='dropdown', href='/login')
              | Sign in
              b.caret
            ul.dropdown-menu(style='padding: 15px;min-width: 250px;')
              li
                .row
                  .col-md-12
                    form.form(accept-charset='UTF-8', action='login', method='post', role='form')
                      .form-group
                        label.sr-only(for='username') Username
                        input.form-control(type='text', name='username', required='', placeholder='Username')
                      .form-group
                        label.sr-only(for='password') Password
                        input.form-control(type='password', name='password', required='', placeholder='Password')
                      //
                        .checkbox
                          label
                            input(type='checkbox')
                            | Remember me
                      .form-group
                        button.btn.btn-success.btn-block(type='submit') Sign in
              //
                li.divider
                li
                  input.btn.btn-primary.btn-block(type='button', value='Sign In with Google')
                  input.btn.btn-primary.btn-block(type='button', value='Sign In with Twitter')

