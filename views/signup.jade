extends layout

block content
    div.container
      form.form-signin.col-md-6(method='post', action='/addUser')
        h1.form-signin-heading Sign in
        div.form-group
            input.form-control(type='text', name='name', placeholder='Name')
        div.form-group
            input.form-control(type='text', name='surname', placeholder='Surname')
        div.form-group
            input.form-control(type='text', name='user', placeholder='User')
        div.form-group
            input.form-control(type='email', name='email', placeholder='Email')
        div.form-group
            input.form-control(type='password', name='password', placeholder='Password')
        div.form-group
            input.form-control(type='password', name='password2', placeholder='Repeat password')
        div.form-group
            button.btn.btn-primary.btn-block(type='submit') Sign in
        